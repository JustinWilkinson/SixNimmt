<div class="card-header text-right font-weight-bold pl-3 pr-3 pt-2 pb-2">
    @Card.Points
</div>
<div class="row card-body text-center align-items-center">
    <h2 class="col p-0 mb-0 font-weight-bold">@Card.Value</h2>
</div>
@if (PlayerName != null)
{
    <div class="card-footer text-muted text-center p-0">
        @PlayerName
    </div>
}

@code {
    [Parameter]
    public Card Card { get; set; }

    [Parameter]
    public string PlayerName { get; set; }
}